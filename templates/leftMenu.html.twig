<div class="btn-group w-100">
  <button type="button"
          class="btn btn-outline-success rounded-0  d-flex justify-content-between align-items-center"
          data-bs-toggle="modal"
          data-bs-target="#newItem"
  >
    {{ ux_icon('material-symbols:add-task-rounded') }}
    <b>Новая задача</b>
  </button>

  <div class="modal fade"
       id="newItem"
       data-bs-backdrop="static"
       data-bs-keyboard="false"
       tabindex="-1"
       aria-labelledby="staticBackdropLabel"
       aria-hidden="true"
  >
    <div class="modal-dialog modal-dialog-scrollable modal-dialog-centered">
      <div class="modal-content rounded-0">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="staticBackdropLabel">Новая задача</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          {{ form(itemForm) }}
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Understood</button>
        </div>
      </div>
    </div>
  </div>
</div>